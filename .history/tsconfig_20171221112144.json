{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es6",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    // "removeComments": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  // "typeRoots": [
  //   "./node_modules/@types",
  //   "./typePatches"
  // ]
  "types": [
    "typePatches"
  ]
}
{
